{{>header}}

<h3 class="heading-primary"> Contact Us </h3>

<form action="/contact" method="POST">
   <div class="form-group">
    <label for="firstname">Name</label>
    <input type="firstname" class="form-control" id="firstname" placeholder="Enter first name" name="firstname">
  </div>   
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="email">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Phone number</label>
    <input type="text" minlength="10" maxlength="10" class="form-control" id="examplephone" placeholder="Enter phone number" name="number">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

